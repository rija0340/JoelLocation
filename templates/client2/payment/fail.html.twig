{% extends 'baseClient2.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-8 hover-lift border-l-4 border-red-500">
    <!-- Error Icon -->
    <div class="text-center mb-6">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-red-100 rounded-full mb-4">
        <i class="fas fa-times-circle text-3xl text-red-600"></i>
      </div>
      <h3 class="text-2xl font-bold text-red-600">Échec de paiement</h3>
    </div>

    <div class="space-y-4 text-gray-700">
      <p class="text-lg">
        Bonjour <span class="font-semibold text-joel-red">{{ devis.client.nom }}</span>,
      </p>

      <p>
        Il semblerait que le paiement du devis numéro
        <span class="font-semibold text-joel-red">{{ devis.numero }}</span> ait échoué.
      </p>

      <p class="text-sm text-gray-600 bg-yellow-50 p-4 rounded-lg border-l-4 border-yellow-400">
        <i class="fas fa-info-circle text-yellow-600 mr-2"></i>
        Veuillez vérifier vos informations de paiement et réessayer.
      </p>
    </div>

    <div class="text-center mt-8">
      <a href="{{ path('validation_step3', {'devisID': devis.id}) }}"
         class="inline-flex items-center px-6 py-3 bg-joel-red text-white font-semibold rounded-lg hover:bg-joel-red-dark transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
        <i class="fas fa-credit-card mr-2"></i>
        Réessayer le paiement
      </a>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}{% endblock %}
