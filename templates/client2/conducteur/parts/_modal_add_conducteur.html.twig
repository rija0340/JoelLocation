<input type="checkbox" id="modalAddConducteur" class="modal-toggle"/>
<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden" id="modalAddConducteur">
	<div class="bg-white rounded-lg max-w-3xl w-full mx-4 p-6">
		<h5 class="text-xl font-bold flex items-center gap-2 mb-4">
			<i class="fas fa-plus"></i>
			Ajouter un conducteur
		</h5>
		{{ form_start(form) }}
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.nom.vars.id }}">Nom</label>
				{{ form_widget(form.nom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.prenom.vars.id }}">Prénom</label>
				{{ form_widget(form.prenom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.dateNaissance.vars.id }}">Date de naissance</label>
				{{ form_widget(form.dateNaissance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.villeNaissance.vars.id }}">Ville de naissance</label>
				{{ form_widget(form.villeNaissance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.numeroPermis.vars.id }}">Numéro de permis</label>
				{{ form_widget(form.numeroPermis, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.villeDelivrance.vars.id }}">Ville de délivrance</label>
				{{ form_widget(form.villeDelivrance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.dateDelivrance.vars.id }}">Date de délivrance</label>
				{{ form_widget(form.dateDelivrance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.telephone.vars.id }}">Téléphone</label>
				{{ form_widget(form.telephone, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
			<div class="form-control">
				<label class="block text-sm font-medium text-gray-700" for="{{ form.dateExpiration.vars.id }}">Date d'expiration</label>
				{{ form_widget(form.dateExpiration, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
			</div>
		</div>
		<div class="flex justify-end gap-4 mt-6">
			<button type="submit" class="bg-joel-red hover:bg-joel-red-dark text-white px-4 py-2 rounded-lg transition-all duration-300">Enregistrer</button>
			<label for="modalAddConducteur" class="border border-gray-300 text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-lg transition-all duration-300">Annuler</label>
		</div>
		{{ form_end(form) }}
	</div>
</div>
