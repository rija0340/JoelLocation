{{ form_start(formConducteur, {'attr': {'class': 'space-y-4 animate-fade-in'}}) }}
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.nom.vars.id }}">
      <span class="label-text">Nom</span>
    </label>
    {{ form_widget(formConducteur.nom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.nom) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.prenom.vars.id }}">
      <span class="label-text">Prénom</span>
    </label>
    {{ form_widget(formConducteur.prenom, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.prenom) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.dateNaissance.vars.id }}">
      <span class="label-text">Date de naissance</span>
    </label>
    {{ form_widget(formConducteur.dateNaissance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.dateNaissance) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.villeNaissance.vars.id }}">
      <span class="label-text">Ville de naissance</span>
    </label>
    {{ form_widget(formConducteur.villeNaissance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.villeNaissance) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.numeroPermis.vars.id }}">
      <span class="label-text">Numéro de permis</span>
    </label>
    {{ form_widget(formConducteur.numeroPermis, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.numeroPermis) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.dateDelivrance.vars.id }}">
      <span class="label-text">Date de délivrance</span>
    </label>
    {{ form_widget(formConducteur.dateDelivrance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.dateDelivrance) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.dateExpiration.vars.id }}">
      <span class="label-text">Date d'expiration</span>
    </label>
    {{ form_widget(formConducteur.dateExpiration, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.dateExpiration) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.villeDelivrance.vars.id }}">
      <span class="label-text">Ville de délivrance</span>
    </label>
    {{ form_widget(formConducteur.villeDelivrance, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.villeDelivrance) }}
  </div>
  <div class="form-control">
    <label class="block text-sm font-medium text-gray-700" for="{{ formConducteur.telephone.vars.id }}">
      <span class="label-text">Téléphone</span>
    </label>
    {{ form_widget(formConducteur.telephone, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-joel-red focus:border-transparent'}}) }}
    {{ form_errors(formConducteur.telephone) }}
  </div>

{% set isPrincipal = formConducteur.vars['value'].isPrincipal is defined and formConducteur.vars['value'].isPrincipal %}

{% if (not hasPrincipal) or isPrincipal %}
  <div class="form-control">
    <label class="flex items-center cursor-pointer">
      <span class="label-text">Est conducteur principal</span>
      <input type="checkbox" name="isPrincipal" class="ml-2 border border-gray-300 rounded text-joel-red focus:ring-joel-red" {{ isPrincipal is defined and isPrincipal ? 'checked' : '' }}>
    </label>
  </div>
</div>
{% endif %}
<div class="flex justify-center gap-4 mt-6">
  <a href="{{ path('client_mesConducteurs') }}"
     class="border border-gray-300 text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-lg transition-all duration-300 hover:scale-105 transition-transform duration-200"
     title="Annuler">
    <i class="fas fa-arrow-left mr-1"></i> Annuler
  </a>
  <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-all duration-300 hover:scale-105 transition-transform duration-200"
          title="{{ button_label|default('Enregistrer') }}">
    <i class="fas fa-save mr-1"></i> {{ button_label|default('Enregistrer') }}
  </button>
</div>
{{ form_end(formConducteur) }}