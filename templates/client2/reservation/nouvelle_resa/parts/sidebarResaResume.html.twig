<div class="bg-base-200 ">
  <div class="max-w-md mx-auto">
    
    <!-- Carte véhicule -->
    <div class="card p-6 shadow-md bg-base-100">
      <h3 class="text-2xl font-bold text-primary mb-4 flex items-center">
      <i class="fas fa-chevron-right mr-3 text-primary"></i> Votre réservation
    </h3>
      <div class="border-b pb-4">
        <div class="text-lg font-semibold text-base-content">
          {{ devis.vehicule.marque }} {{ devis.vehicule.modele }}
        </div>
        <img
          src="/Uploads/vehicules/{{ devis.vehicule.image }}"
          alt="{{ devis.vehicule.marque }} {{ devis.vehicule.modele }}"
          class="w-full h-48 object-cover rounded-lg mt-2"
        >
      </div>

      <div class="space-y-4">
        <!-- Agence départ -->
        <div class="border-b pb-4">
          <h5 class="text-lg font-semibold text-primary">Agence départ</h5>
          <p class="text-sm text-base-content mt-2">
            <i class="fas fa-map-marker-alt text-success mr-2"></i>
            <span id="agence_depart">{{ devis.agenceDepart }}</span><br>
            <span id="date_depart">{{ devis.dateDepart | date('d-m-Y H:i') }}</span>
          </p>
        </div>

        <!-- Agence retour -->
        <div class="border-b pb-4">
          <h5 class="text-lg font-semibold text-primary">Agence retour</h5>
          <p class="text-sm text-base-content mt-2">
            <i class="fas fa-map-marker-alt text-success mr-2"></i>
            <span id="agence_retour">{{ devis.agenceRetour }}</span><br>
            <span id="date_retour">{{ devis.dateRetour | date('d-m-Y H:i') }}</span>
          </p>
        </div>

        <!-- Prestations incluses -->
        <div class="border-b pb-4">
          <h5 class="text-lg font-semibold text-primary">Prestations incluses</h5>
          <ul class="mt-2 space-y-2 text-sm text-base-content">
            <li class="flex items-start">
              <i class="fas fa-check text-success mr-2 mt-1"></i>
              <span>Kilométrage Illimité</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-success mr-2 mt-1"></i>
              <span>Assurance accidents causés aux tiers</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-success mr-2 mt-1"></i>
              <span>Assurance responsabilité civile</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-success mr-2 mt-1"></i>
              <span>Assurance collision (CDW)</span>
            </li>
            <li class="flex items-start">
              <i class="fas fa-check text-success mr-2 mt-1"></i>
              <span>TVA 8.5 %</span>
            </li>
          </ul>
        </div>

        <!-- Prix de base -->
        <div class="border-b pb-4">
          <h5 class="text-lg font-semibold text-primary">Prix de base de location</h5>
          <p class="text-base-content mt-2">
            {{ devis.tarifVehicule }} €<br>
            <span class="text-gray-600 text-sm">
              soit {{ (devis.tarifVehicule / devis.duree)|number_format(2, '.', '') }} € / jour
            </span>
          </p>
        </div>

        <!-- Options -->
        {% if devis.devisOptions|length > 0 or devis.conducteur %}
          <div class="border-b pb-4">
            <h5 class="text-lg font-semibold text-primary">Option(s)</h5>
            <ul class="mt-2 space-y-3 text-sm text-base-content">
              {% if devis.conducteur %}
                <li class="flex justify-between">
                  <div class="flex items-start">
                    <i class="fas fa-check text-success mr-2 mt-1"></i>
                    <span>Conducteur additionnel</span>
                  </div>
                  <div>{{ prixConductSuppl }} €</div>
                </li>
              {% endif %}
              {% for option in devis.devisOptions %}
                <li class="flex justify-between">
                  <div class="flex items-start">
                    <i class="fas fa-check text-success mr-2 mt-1"></i>
                    <span>
                      {{ option.opt.appelation }}
                      {% if option.opt.appelation matches '/Siège/' %}
                        (nbr : {{ option.quantity }})
                      {% endif %}
                    </span>
                  </div>
                  <div>{{ (option.opt.prix * option.quantity)|number_format(2, ',', ' ') }} €</div>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <!-- Garanties -->
        {% if devis.garanties|length > 0 %}
          <div class="pb-4">
            <h5 class="text-lg font-semibold text-primary">Garantie(s)</h5>
            <ul class="mt-2 space-y-3 text-sm text-base-content">
              {% for garantie in devis.garanties %}
                <li class="flex justify-between">
                  <div class="flex items-start">
                    <i class="fas fa-check text-success mr-2 mt-1"></i>
                    <span>{{ garantie.appelation }}</span>
                  </div>
                  <div>{{ garantie.prix }} €</div>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Prix total -->
    <div class="text-center mt-6 p-4 bg-base-100 rounded-lg shadow-sm">
      <h5 class="text-lg font-semibold text-primary">Prix total pour {{ devis.duree }} jour(s)</h5>
      <span class="text-2xl font-bold text-base-content">{{ devis.prix }} €</span><br>
      <span class="text-gray-600 text-sm">
        Soit {{ (devis.prix / devis.duree)|number_format(2, '.', '') }} € / jour
      </span>
    </div>
    
  </div>
</div>
