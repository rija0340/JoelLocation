<div class="grid grid-cols-2 md:grid-cols-4 gap-4 my-4">
    {% set steps = [
        { number: 1, label: 'Agences & Dates' },
        { number: 2, label: 'Véhicules' },
        { number: 3, label: 'Options et garanties' },
        { number: 4, label: 'Récapitulatif' }
    ] %}

    {% for step in steps %}
        <div class="text-center">
            <div class="
                {{ step.number == currentStep ? 'border-2 border-red-500 text-red-500' : 'border border-gray-300 text-gray-600' }}
                w-10 h-10 rounded-full flex items-center justify-center mx-auto bg-white
            ">
                {{ step.number }}
            </div>
            <p class="mt-2 text-base">{{ step.label }}</p>
        </div>
    {% endfor %}
</div>


		