<div class="space-y-4">
  {% if reservationAvenir|length > 0 %}
    {% for reserv in reservationAvenir %}
      <div class="card bg-base-100 shadow-md">
        <div class="md:flex">
          <figure class="md:w-1/3 h-52 overflow-hidden">
            <img
              src="{{ vich_uploader_asset(reserv.vehicule, 'imageFile') }}"
              alt="{{ reserv.vehicule.image }}"
              class="object-cover w-full h-full"
            />
          </figure>
          <div class="card-body md:w-2/3 flex flex-col justify-between">
            <div class="space-y-2">
              <h5 class="text-lg font-bold flex items-center justify-between">
                <span>{{ reserv.reference }}</span>
                <span class="badge badge-warning">Réservation</span>
              </h5>
              <p class="text-sm text-gray-500 flex items-center">
                <i class="fas fa-calendar-alt mr-2"></i>
                Créé le {{ reserv.dateReservation|date('d/m/Y') }}
              </p>
              <p class="text-sm text-gray-500 flex items-center">
                <i class="fas fa-clock mr-2"></i>
                Période : {{ reserv.dateDebut|date('d/m/Y') }} – {{ reserv.dateFin|date('d/m/Y') }} ({{ reserv.duree }} jours)
              </p>
              <p class="text-sm text-gray-500 flex items-center">
                <i class="fas fa-car mr-2"></i>
                Voiture : {{ reserv.vehicule.marque }} {{ reserv.vehicule.modele }}
              </p>
            </div>
            <div class="space-y-1 mt-4 md:mt-0 text-sm">
              <!-- Remplace "add white text here" selon besoin -->
              <p class="text-white">add white text here</p>
              <p class="text-gray-500 flex items-center">
                <i class="fas fa-money mr-2"></i>
                Prix options : {{ reserv.prixOptions }} €
              </p>
              <p class="text-gray-500 flex items-center">
                <i class="fas fa-money mr-2"></i>
                Prix garanties : {{ reserv.prixGaranties }} €
              </p>
              <p class="text-lg font-semibold">
                Prix total : {{ reserv.prix }} €
              </p>
            </div>
            <div class="mt-4 flex justify-end">
              <a href="{{ path('client_reservation_show', {'id': reserv.id}) }}"
                 class="btn btn-primary btn-sm">
                <i class="fa fa-info-circle mr-1"></i> Détails
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  {% else %}
    <div class="card bg-base-100 shadow-md">
      <div class="card-body text-center py-12">
        <i class="fas fa-file-invoice fa-3x text-gray-400 mb-4"></i>
        <h5 class="text-lg text-gray-500 mb-2">Aucune réservation trouvée</h5>
        <p class="text-gray-500">Vous n'avez actuellement aucune réservation en attente.</p>
      </div>
    </div>
  {% endif %}
</div>
