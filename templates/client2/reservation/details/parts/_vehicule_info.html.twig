<div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
	<div class="p-5">
		<h4
			class="text-lg font-bold text-gray-900 flex items-center mb-4 pb-2 border-b border-gray-50 uppercase tracking-tight">
			<i class="fa fa-car mr-2 text-gray-400"></i> VÃ©hicule
		</h4>
		<div class="space-y-4">
			<div class="flex justify-center py-2 bg-gray-50/50 rounded-lg">
				{% set image_path = vich_uploader_asset(reservation.vehicule, 'imageFile') %}
				{% set webp_path = image_path|replace({'.jpg': '.webp', '.png': '.webp', '.jpeg': '.webp'}) %}
				<picture>
					<source srcset="{{ webp_path }}" type="image/webp">
					<img src="{{ image_path }}" alt="{{ reservation.vehicule.image }}" loading="lazy"
						class="h-32 w-auto object-contain max-h-32 transform transition-transform hover:scale-105 duration-300" />
				</picture>
			</div>
			<div>
				<h5 class="font-extrabold text-gray-900 mb-3 text-xl">{{ reservation.vehicule.marque }} {{
					reservation.vehicule.modele }}</h5>
				<div class="grid grid-cols-2 gap-x-4 gap-y-3">
					<div class="flex items-center text-sm text-gray-600 bg-gray-50 px-3 py-2 rounded-lg">
						<i class="fa fa-cog text-gray-400 mr-2 w-4"></i>
						<span class="font-medium">{{ reservation.vehicule.vitesse }}</span>
					</div>
					<div class="flex items-center text-sm text-gray-600 bg-gray-50 px-3 py-2 rounded-lg">
						<i class="fa fa-gas-pump text-gray-400 mr-2 w-4"></i>
						<span class="font-medium text-xs">{{ reservation.vehicule.carburation }}</span>
					</div>
					<div class="flex items-center text-sm text-gray-600 bg-gray-50 px-3 py-2 rounded-lg">
						<i class="fa fa-users text-gray-400 mr-2 w-4"></i>
						<span class="font-medium">{{ reservation.vehicule.passagers }} p.</span>
					</div>
					<div class="flex items-center text-sm text-gray-600 bg-gray-50 px-3 py-2 rounded-lg">
						<i class="fa fa-door-open text-gray-400 mr-2 w-4"></i>
						<span class="font-medium">{{ reservation.vehicule.portes }} p.</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>