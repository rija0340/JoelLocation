<div class="bg-white rounded-lg shadow-md overflow-hidden">
	<div class="p-6">
		<h4 class="text-2xl md:text-2xl font-bold text-joel-red flex items-center mb-4">
			Options & Garanties
		</h4>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div class="bg-gray-100 rounded-lg p-4">
				<h6 class="font-bold mb-3 border-b border-gray-300 pb-2 flex items-center">
					<i class="fas fa-plus-circle mr-2"></i>
					Options Sélectionnées
				</h6>
				<ul class="list-none mb-0">
					{% if reservation.conducteur %}
						<li class="flex justify-between items-center py-2 border-b border-gray-300">
							<div class="flex items-center">
								<span class="w-3 h-3 rounded-full bg-red-500 mr-2 inline-block"></span>
								<span>Conducteur Additionnel</span>
							</div>
							<span class="font-medium">{{ prixConductSuppl }}€</span>
						</li>
					{% endif %}
					{% for option in reservation.devisOptions %}
						<li class="flex justify-between items-center py-2 {% if not loop.last %}border-b border-gray-300{% endif %}">
							<div class="flex items-center">
								<span class="w-3 h-3 rounded-full bg-red-500 mr-2 inline-block"></span>
								<span>
									{{ option.opt.appelation }}
									{% if option.opt.appelation matches '/Siège/' %}
										<span class="text-gray-600">(x{{ option.quantity }})</span>
									{% endif %}
								</span>
							</div>
							<span class="font-medium">{{ (option.opt.prix * option.quantity)|number_format(2,","," ") }}€</span>
						</li>
					{% else %}
						<li class="text-gray-600 py-2 text-center flex items-center justify-center gap-2">
							<i class="fas fa-info-circle"></i>
							Aucune option sélectionnée
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="bg-gray-100 rounded-lg p-4">
				<h6 class="font-bold mb-3 border-b border-gray-300 pb-2 flex items-center">
					<i class="fas fa-shield-alt mr-2"></i>
					Couverture Assurance
				</h6>
				<ul class="list-none mb-0">
					{% for garantie in reservation.garanties %}
						<li class="flex justify-between items-center py-2 {% if not loop.last %}border-b border-gray-300{% endif %}">
							<div class="flex items-center">
								<span class="w-3 h-3 rounded-full bg-red-500 mr-2 inline-block"></span>
								<span>{{ garantie }}</span>
							</div>
							<span class="font-medium">{{ (garantie.prix)|number_format(2,","," ") }}€</span>
						</li>
					{% else %}
						<li class="text-gray-600 py-2 text-center flex items-center justify-center gap-2">
							<i class="fas fa-info-circle"></i>
							Aucune garantie sélectionnée
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>
