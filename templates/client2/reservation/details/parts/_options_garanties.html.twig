<div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
	<div class="p-4">
		<h4 class="text-xl font-semibold text-joel-red flex items-center mb-3">
			<i class="fa fa-cogs mr-2"></i> Options & Garanties
		</h4>
		<div class="space-y-4">
			<div class="bg-gray-50 rounded-lg p-3">
				<h6 class="font-semibold text-base mb-2 flex items-center">
					<i class="fa fa-plus-circle text-joel-red mr-2"></i>
					Options Sélectionnées
				</h6>
				<div class="space-y-2 text-base">
					{% if reservation.conducteur %}
						<div class="flex justify-between items-center py-1 text-base">
							<div class="flex items-center">
								<i class="fa fa-user-plus text-joel-red mr-2 w-4"></i>
								<span>Conducteur Additionnel</span>
							</div>
							<span class="font-medium">{{ prixConductSuppl }}€</span>
						</div>
					{% endif %}
					{% for option in reservation.devisOptions %}
						<div class="flex justify-between items-center py-1 text-base">
							<div class="flex items-center">
								<i class="fa fa-check text-joel-red mr-2 w-4"></i>
								<span>
									{{ option.opt.appelation }}
									{% if option.opt.appelation matches '/Siège/' %}
										<span class="text-gray-600">(x{{ option.quantity }})</span>
									{% endif %}
								</span>
							</div>
							<span class="font-medium">{{ (option.opt.prix * option.quantity)|number_format(2,","," ") }}€</span>
						</div>
					{% else %}
						{% if not reservation.conducteur %}
						<div class="text-gray-500 py-2 text-center text-base flex items-center justify-center gap-2">
							<i class="fa fa-info-circle"></i>
							Aucune option sélectionnée
						</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
			
			<div class="bg-gray-50 rounded-lg p-3">
				<h6 class="font-semibold text-base mb-2 flex items-center">
					<i class="fa fa-shield-alt text-joel-red mr-2"></i>
					Couverture Assurance
				</h6>
				<div class="space-y-2 text-base">
					{% for garantie in reservation.garanties %}
						<div class="flex justify-between items-center py-1 text-base">
							<div class="flex items-center">
								<i class="fa fa-shield text-joel-red mr-2 w-4"></i>
								<span>{{ garantie }}</span>
							</div>
							<span class="font-medium">{{ (garantie.prix)|number_format(2,","," ") }}€</span>
						</div>
					{% else %}
						<div class="text-gray-500 py-2 text-center text-base flex items-center justify-center gap-2">
							<i class="fa fa-info-circle"></i>
							Aucune garantie sélectionnée
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
