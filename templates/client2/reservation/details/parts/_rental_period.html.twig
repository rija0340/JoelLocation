<div class="card bg-white shadow-md rounded-lg">
	<div class="card-content p-6">
		<h4 class="text-2xl md:text-2xl font-bold text-accent flex items-center mb-4">
			Période de Location
		</h4>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div class="space-y-6">
				<div class="pb-3 border-b border-base-300">
					<div class="flex items-center mb-2">
						<div class="bg-base-200 rounded-full p-2 mr-3">
							<i class="fas fa-plane-departure"></i>
						</div>
						<h6 class="font-bold mb-0">Départ</h6>
					</div>
					<div class="ml-8 pl-3">
						<p class="mb-2 flex items-center gap-2">
							<i class="fas fa-calendar-alt mr-2"></i>
							{% if type == 'devis' %}
								<span class="font-medium">{{ reservation.dateDepart|date('d/m/Y') }}</span>
								à
								<span class="font-medium">{{ reservation.dateDepart|date('H:i') }}</span>
							{% else %}
								<span class="font-medium">{{ reservation.dateDebut|date('d/m/Y') }}</span>
								à
								<span class="font-medium">{{ reservation.dateDebut|date('H:i') }}</span>
							{% endif %}
						</p>
						<p class="mb-0 flex items-center gap-2">
							<i class="fas fa-map-marker-alt mr-2"></i>
							<span>{{ reservation.agenceDepart }}</span>
						</p>
					</div>
				</div>
				<div>
					<div class="flex items-center mb-2">
						<div class="bg-base-200 rounded-full p-2 mr-3">
							<i class="fas fa-plane-arrival"></i>
						</div>
						<h6 class="font-bold mb-0">Retour</h6>
					</div>
					<div class="ml-8 pl-3">
						<p class="mb-2 flex items-center gap-2">
							<i class="fas fa-calendar-alt mr-2"></i>
							{% if type == 'devis' %}
								<span class="font-medium">{{ reservation.dateRetour|date('d/m/Y') }}</span>
								à
								<span class="font-medium">{{ reservation.dateRetour|date('H:i') }}</span>
							{% else %}
								<span class="font-medium">{{ reservation.dateFin|date('d/m/Y') }}</span>
								à
								<span class="font-medium">{{ reservation.dateFin|date('H:i') }}</span>
							{% endif %}
						</p>
						<p class="mb-0 flex items-center gap-2">
							<i class="fas fa-map-marker-alt mr-2"></i>
							<span>{{ reservation.agenceRetour }}</span>
						</p>
					</div>
				</div>
			</div>
			<div class="bg-base-200 rounded-lg p-4 space-y-6">
				<div>
					<div class="flex items-center mb-2">
						<i class="fas fa-clock mr-2"></i>
						<h6 class="font-bold mb-0">Durée</h6>
					</div>
					<p class="ml-6 font-medium">{{ reservation.duree }}
						jours</p>
				</div>
				<div>
					<div class="flex items-center mb-2">
						<i class="fas fa-users mr-2"></i>
						<h6 class="font-bold mb-0">Nombre de personnes</h6>
					</div>
					<div class="grid grid-cols-2 gap-4 ml-6">
						<div>
							<p class="mb-1 flex items-center gap-1 text-base-content/70">
								<i class="fas fa-user"></i>
								<small>Adultes:</small>
							</p>
							<p class="font-medium">
								{{ reservation.client.infosResa ? reservation.client.infosResa.nbrAdultes : "non renseigné" }}
							</p>
						</div>
						<div>
							<p class="mb-1 flex items-center gap-1 text-base-content/70">
								<i class="fas fa-child"></i>
								<small>Enfants:</small>
							</p>
							<p class="font-medium">
								{{ reservation.client.infosResa ? reservation.client.infosResa.nbrEnfants : "non renseigné" }}
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
