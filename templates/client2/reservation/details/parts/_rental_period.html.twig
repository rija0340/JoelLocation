<div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
	<div class="p-4">
		<h4 class="text-xl font-semibold text-joel-red flex items-center mb-3">
			<i class="fa fa-calendar-alt mr-2"></i> Période de Location
		</h4>
		<div class="space-y-4">
			<div class="flex flex-col md:flex-row gap-4">
				<!-- Departure -->
				<div class="flex-1 bg-gray-50 rounded-lg p-3">
					<div class="flex items-center mb-2">
						<i class="fa fa-plane-departure text-joel-red mr-2"></i>
						<h6 class="font-semibold text-base">Départ</h6>
					</div>
					<div class="text-base space-y-1 ml-6">
						<div class="flex">
							<i class="fa fa-calendar text-joel-red mr-2 w-4"></i>
							<span>
								{% if type == 'devis' %}
									{{ reservation.dateDepart|date('d/m/Y') }} à {{ reservation.dateDepart|date('H:i') }}
								{% else %}
									{{ reservation.dateDebut|date('d/m/Y') }} à {{ reservation.dateDebut|date('H:i') }}
								{% endif %}
							</span>
						</div>
						<div class="flex">
							<i class="fa fa-map-marker text-joel-red mr-2 w-4"></i>
							<span>{{ reservation.agenceDepart }}</span>
						</div>
					</div>
				</div>
				
				<!-- Return -->
				<div class="flex-1 bg-gray-50 rounded-lg p-3">
					<div class="flex items-center mb-2">
						<i class="fa fa-plane-arrival text-joel-red mr-2"></i>
						<h6 class="font-semibold text-base">Retour</h6>
					</div>
					<div class="text-base space-y-1 ml-6">
						<div class="flex">
							<i class="fa fa-calendar text-joel-red mr-2 w-4"></i>
							<span>
								{% if type == 'devis' %}
									{{ reservation.dateRetour|date('d/m/Y') }} à {{ reservation.dateRetour|date('H:i') }}
								{% else %}
									{{ reservation.dateFin|date('d/m/Y') }} à {{ reservation.dateFin|date('H:i') }}
								{% endif %}
							</span>
						</div>
						<div class="flex">
							<i class="fa fa-map-marker text-joel-red mr-2 w-4"></i>
							<span>{{ reservation.agenceRetour }}</span>
						</div>
					</div>
				</div>
			</div>
			
			<div class="bg-gray-50 rounded-lg p-3">
				<div class="flex flex-col md:flex-row gap-4">
					<div class="flex-1">
						<div class="flex items-center mb-1">
							<i class="fa fa-clock text-joel-red mr-2"></i>
							<h6 class="font-semibold text-base">Durée</h6>
						</div>
						<p class="text-base ml-6 font-medium">{{ reservation.duree }} jours</p>
					</div>
					<div class="flex-1">
						<div class="flex items-center mb-1">
							<i class="fa fa-users text-joel-red mr-2"></i>
							<h6 class="font-semibold text-base">Nombre de personnes</h6>
						</div>
						<div class="text-base ml-6">
							<div class="flex flex-col space-y-1">
								<div class="flex items-center">
									<i class="fa fa-user mr-1"></i>
									<span class="font-medium">
										Adultes: {{ reservation.client.infosResa ? reservation.client.infosResa.nbrAdultes : "non renseigné" }}
									</span>
								</div>
								<div class="flex items-center">
									<i class="fa fa-child mr-1"></i>
									<span class="font-medium">
										Enfants: {{ reservation.client.infosResa ? reservation.client.infosResa.nbrEnfants : "non renseigné" }}
									</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
