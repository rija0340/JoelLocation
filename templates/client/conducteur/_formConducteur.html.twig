{{ form_start(formConducteur) }}

<div class="row">
	<div class="form-group col-md-6">
		<label for="">Nom :</label>
		{{ form_widget(formConducteur.nom) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Prénom :</label>
		{{ form_widget(formConducteur.prenom) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Date de naissance :</label>
		{{ form_widget(formConducteur.dateNaissance) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Ville de naissance :</label>
		{{ form_widget(formConducteur.villeNaissance) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Numéro de permis :</label>
		{{ form_widget(formConducteur.numeroPermis) }}
	</div>
	<div class="form-group col-md-6">
		<label for="">Date de délivrance :</label>
		{{ form_widget(formConducteur.dateDelivrance) }}
	</div>
