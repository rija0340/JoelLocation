<div class="md:col-span-4 space-y-6">
  <!-- Vehicle Information Card -->
  <div class="card shadow-sm bg-white rounded-lg">
    <div class="card-body p-6">
      <div class="flex justify-between items-start mb-6">
        <h5 class="font-bold text-red-800 flex items-center gap-2 mb-0">
          <i class="fas fa-car text-red-400"></i>
          Informations Véhicule
        </h5>
      </div>

      <div class="vehicle-details space-y-4">
        <div>
          <img src="{{ vich_uploader_asset(reservation.vehicule, 'imageFile') }}" 
               alt="{{ reservation.vehicule.image }}" 
               class="w-full rounded-lg shadow-sm object-cover max-h-48" />
        </div>

        <div class="vehicle-info">
          <h4 class="font-bold mb-2 text-lg">{{ reservation.vehicule.marque }} {{ reservation.vehicule.modele }}</h4>

          <div class="bg-gray-100 rounded-lg p-4">
            <div class="grid grid-cols-2 gap-x-6 gap-y-4">
              <div>
                <div class="flex items-center mb-1 gap-2">
                  <i class="fas fa-tag"></i>
                  <small class="text-gray-600 font-semibold">Vitesse</small>
                </div>
                <span class="font-medium ml-4">{{ reservation.vehicule.vitesse }}</span>
              </div>
              <div>
                <div class="flex items-center mb-1 gap-2">
                  <i class="fas fa-gas-pump"></i>
                  <small class="text-gray-600 font-semibold">Carburant</small>
                </div>
                <span class="font-medium ml-4">{{ reservation.vehicule.carburation }}</span>
              </div>
              <div>
                <div class="flex items-center mb-1 gap-2">
                  <i class="fas fa-users"></i>
                  <small class="text-gray-600 font-semibold">Places</small>
                </div>
                <span class="font-medium ml-4">{{ reservation.vehicule.passagers }}</span>
              </div>
              <div>
                <div class="flex items-center mb-1 gap-2">
                  <i class="fas fa-door-open"></i>
                  <small class="text-gray-600 font-semibold">Portes</small>
                </div>
                <span class="font-medium ml-4">{{ reservation.vehicule.portes }}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Client Information Card -->
  <div class="card shadow-sm bg-white rounded-lg">
    <div class="card-body p-6">
      <h5 class="font-bold text-red-800 flex items-center gap-2 mb-6">
        <i class="fas fa-user text-red-400"></i>
        Informations Client
      </h5>

      <div class="bg-gray-100 rounded-lg p-4 space-y-6">
        <div>
          <div class="flex items-center mb-1 gap-2">
            <i class="fas fa-id-card"></i>
            <small class="text-gray-600">Nom complet</small>
          </div>
          <span class="font-medium ml-4">{{ reservation.client.nom }} {{ reservation.client.prenom }}</span>
        </div>
        <div>
          <div class="flex items-center mb-1 gap-2">
            <i class="fas fa-envelope"></i>
            <small class="text-gray-600">Email</small>
          </div>
          <span class="font-medium ml-4">{{ reservation.client.mail }}</span>
        </div>
        <div>
          <div class="flex items-center mb-1 gap-2">
            <i class="fas fa-phone"></i>
            <small class="text-gray-600">Téléphone</small>
          </div>
          <span class="font-medium ml-4">{{ reservation.client.telephone }}</span>
        </div>
      </div>
    </div>
  </div>
</div>
