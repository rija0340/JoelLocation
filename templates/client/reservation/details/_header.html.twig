<div class="container mx-auto py-4 max-w-[1200px] px-4">
  <!-- Header Section -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
    <div class="flex items-center mb-3 md:mb-0">
      <div>
        <h1 class="text-xl font-bold mb-1 flex flex-wrap items-center gap-2">
          {% if type == 'devis' %}
            <span>DEVIS -</span>
            <span class="badge badge-warning rounded-full px-4 py-1">{{ reservation.numero }}</span>
          {% else %}
            <span>RESERVATION -</span>
            <span class="badge badge-warning rounded-full px-4 py-1">{{ reservation.reference }}</span>
          {% endif %}
        </h1>
        <small>
          Créé le
          {% if type == 'devis' %}
            {{ reservation.dateCreation|date('d/m/Y') }}
          {% else %}
            {{ reservation.dateReservation|date('d/m/Y') }}
          {% endif %}
        </small>
      </div>
    </div>
    <a href="{{ path('client_reservations') }}" class="btn btn-outline btn-error flex items-center gap-2">
      <i class="fas fa-reply"></i>
      Mes Réservations
    </a>
  </div>
</div>
