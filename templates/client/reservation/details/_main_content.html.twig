  {# Sidebar - fixe largeur sur md+ #}
  <div class="md:w-1/4">
    {% include 'client/reservation/details/_sidebar.html.twig' with {
      'reservation': reservation
    } %}
  </div>

  {# Contenu principal - prend le reste #}
  <div class="md:w-3/4 space-y-6">
