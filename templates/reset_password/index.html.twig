{% extends 'baseClient2.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
	<div class="flex items-center justify-center bg-base-200 p-6">
		<div class="card w-full max-w-md shadow-xl bg-white">
			<div class="card-body">
				<h3 class="card-title text-center font-bold">Réinitialisation de mot de passe</h3>

				<form method="post" class="space-y-6 mt-2">
					<div class="form-control">
						<label for="inputEmail" class="label">
							<span class="label-text">Votre email</span>
						</label>
						<input type="email" name="email" id="inputEmail" placeholder="Votre adresse mail" class="input input-bordered w-full" required/>
					</div>

					<div class="flex justify-center">
						<button type="submit" class="btn btn-error w-full max-w-xs flex items-center justify-center gap-2">
							<i class="fa fa-check" aria-hidden="true"></i>
							Valider
						</button>
					</div>
				</form>

				<p class="text-center mt-4">
					<a href="{{ path('app_login') }}" class="link">Se connecter</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{# Removed Bootstrap / material-kit scripts since not used anymore. 
			     If you need JavaScript behavior, add vanilla JS or Alpine/etc here. #}
{% endblock %}
