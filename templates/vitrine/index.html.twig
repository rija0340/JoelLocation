            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            padding: 1rem;
            text-align: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity .3s;
        }
        @media (max-width: 767px) {
            .mobile-overlay {
                opacity: 1;
                pointer-events: auto;
            }
        }

        /* ─────── DESKTOP : overlay au hover uniquement ─────── */
