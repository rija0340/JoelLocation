{% extends 'vitrine/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-bold text-joel-red mb-4">Connexion</h1>
            <div class="w-16 h-1 bg-joel-red mx-auto"></div>
        </div>

        <div class="bg-white rounded-lg shadow-xl p-8">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% set flashClass = '' %}
                    {% if label == 'success' %}
                        {% set flashClass = 'bg-green-100 border-green-400 text-green-700' %}
                    {% elseif label == 'warning' %}
                        {% set flashClass = 'bg-yellow-100 border-yellow-400 text-yellow-700' %}
                    {% elseif label == 'danger' or label == 'error' %}
                        {% set flashClass = 'bg-red-100 border-red-400 text-red-700' %}
                    {% else %}
                        {% set flashClass = 'bg-blue-100 border-blue-400 text-blue-700' %}
                    {% endif %}
                    <div class="border {{ flashClass }} px-4 py-3 rounded mb-4">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
            
            <form method="post">
                <div class="space-y-6">
                    {% if error %}
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}
                    
                    <div>
                        <label for="inputEmail" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-joel-red focus:border-transparent transition-all duration-200" required autofocus>
                    </div>
                    
                    <div>
                        <label for="inputPassword" class="block text-gray-700 font-medium mb-2">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus-joel-red focus:border-transparent transition-all duration-200" required>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div>
                        <button type="submit" 
                                class="bg-joel-red hover:bg-joel-red-dark text-white font-bold px-6 py-3 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg w-full">
                            Se connecter
                        </button>
                    </div>
                </div>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Vous n'avez pas de compte ? 
                    <a href="{{ path('inscription') }}" 
                       class="text-joel-red hover:text-joel-red-dark font-medium transition-colors duration-200">
                        S'inscrire
                    </a>
                </p>
            </div>
            
            <!-- Reservation-specific section -->
            {% if app.session.get('reservation') %}
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Vous avez une réservation en cours sans compte ? 
                    <a href="{{ path('inscription') }}" 
                       class="text-joel-red font-bold hover:text-joel-red-dark transition-colors duration-200 inline-block mt-2">
                        Créer un compte maintenant pour finaliser votre réservation
                    </a>
                </p>
            </div>
            {% endif %}
            
            <div class="text-center mt-3">
                <a href="{{ path('reset_password') }}" class="text-gray-600 hover:text-joel-red text-sm">Mot de passe oublié ?</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}