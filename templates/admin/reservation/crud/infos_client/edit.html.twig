{% extends 'base2.html.twig' %}

{% block title %}
	Informations client
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block content %}


	{{form_start(form)}}
	<div class="x_panel">
		<div class="x_title">
			<h2 class="text-danger text-uppercase">
				identité client :
			</h2>
			<div class="clearfix"></div>
		</div>
		<div class="row">
			<div class="form-group col-md-6">
				<label for="">Nom :</label>
				{{ form_widget(form.nom) }}
			</div>
			<div class="form-group col-md-6">
				<label for="">Prénom :</label>
				{{ form_widget(form.prenom) }}

			</div>
			<div class="form-group col-md-6">
				<label for="">Adresse email :</label>
				{{ form_widget(form.mail) }}

			</div>
			<div class="form-group col-md-3">
				<label for="">Téléphone :</label>
				{{ form_widget(form.telephone) }}

			</div>
			<div class="form-group col-md-3">
				<label for="">Portable :</label>
				{{ form_widget(form.portable) }}

			</div>


			<div class="form-group col-md-6">
				<label for="">Adresse :</label>
				{{ form_widget(form.adresse) }}

			</div>
			<div class="form-group col-md-6">
				<label for="">Complement adresse :</label>
				{{ form_widget(form.complementAdresse) }}

			</div>
			<div class="form-group col-md-3">
				<label for="">Ville :</label>
				{{ form_widget(form.ville) }}

			</div>
			<div class="form-group col-md-3">
				<label for="">Boîte postal :</label>
				{{ form_widget(form.codePostal) }}

			</div>

		</div>
	</div>

	<div class="x_panel">
		<div class="x_title">
			<h2 class="text-danger text-uppercase">
				informations complémentaires :
			</h2>
			<div class="clearfix"></div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label for="">Nombre d'adultes</label>
				{{ form_widget(form.infosResa.nbrAdultes) }}</div>
			<div class="col-md-6">
				<label for="">Nombre d'enfants</label>
				{{ form_widget(form.infosResa.nbrEnfants) }}</div>
			<div class="col-md-6">
				<label for="">Nombre de bébés</label>
				{{ form_widget(form.infosResa.nbrBebes) }}</div>
			<div class="col-md-6">
				<label for="">Informations internes</label>
				{{ form_widget(form.infosResa.infosInternes) }}</div>
		</div>


	</div>

	<div class="x_panel">
		<div class="x_title">
			<h2 class="text-danger text-uppercase">
				informations vol aller-retour :
			</h2>
			<div class="clearfix"></div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label for="">Compagnie aller:</label>

				{{ form_widget(form.infosVolResa.compagnieAller) }}</div>
			<div class="col-md-6">
				<label for="">Compagnie retour:</label>

				{{ form_widget(form.infosVolResa.compagnieRetour) }}</div>
			<div class="col-md-6">
				<label for="">N° vol aller:</label>

				{{ form_widget(form.infosVolResa.numVolAller) }}</div>
			<div class="col-md-6">
				<label for="">N° vol retour:</label>

				{{ form_widget(form.infosVolResa.numVolRetour) }}</div>
			<div class="col-md-6">
				<label for="">Heure aller:</label>

				{{ form_widget(form.infosVolResa.heureVolAller) }}</div>
			<div class="col-md-6">
				<label for="">Heure retour:</label>

				{{ form_widget(form.infosVolResa.heureVolRetour) }}</div>
		</div>


	</div>
	<div class="text-center">

		<a href="{{path('reservation_index')}}" class="btn btn-dark">Annuler</a>
		<button type="submit" class="btn btn-danger">Enregistrer</button>
	</div>
	{{form_end(form)}}
{% endblock %}
{% block javascripts %}{% endblock %}
