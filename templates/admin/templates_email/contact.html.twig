{# email-template.html.twig #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<style>
			.email-container {
				max-width: 600px;
				margin: 0 auto;
				font-family: Arial, sans-serif;
				line-height: 1.6;
				color: #333;
			}

			.banner {
				background-color: #f8ecec;
				padding: 5px;
				text-align: center;
				margin-bottom: 10px;
			}

			.logo {
				max-height: 150px;
				height: 150px;
				width: auto;
			}

			.content {
				padding: 20px;
				background-color: #ffffff;
			}

			.download-button {
				text-align: center;
				display: inline-block;
				background-color: #424242;
				color: white;
				padding: 12px 24px;
				text-decoration: none;
				border-radius: 4px;
				margin: 20px 0;
			}

			.footer {
				margin-top: 5px;
				padding: 20px;
			}

			.social-links {
				border-top: 1px solid #eee;
				text-align: center;
				margin-top: 20px;
			}

			.social-link {
				display: inline-block;
				margin: 0 10px;
				width: 32px;
				height: 32px;
				background-color: #3b5998;
				border-radius: 50%;
			}

			.social-link.instagram {
				background-color: #c13584;
			}

			.social-link.youtube {
				background-color: #ff0000;
			}

			.contact-info {
				margin-top: 20px;
				text-align: left;
			}
		</style>
	</head>
	<body>
		<div class="email-container">
			<div class="banner">
				<img src="cid:logo" alt="Company Logo" class="logo">
			</div>

			<div class="content">
				Hi  je suis Rija ceci est votre devis
				<div class="text-center">
					<a rel="noopener" target="_blank" href="{{link}}" style="background-color: #1F7F4C; font-size: 18px; font-family: Helvetica, Arial, sans-serif; font-weight: bold; text-decoration: none; padding: 5px 10px; color: #ffffff; border-radius: 5px; display: inline-block; mso-padding-alt: 0;">
						<span style="mso-text-raise: 15pt;">I am a button &rarr;</span>
					</a>
				</div>

			</div>

			<div class="footer">
				<div class="contact-info">
					<p>Tel :
						{{ phone_number1 }}</p>
					<p>{{ phone_number2 }}</p>
					<p>
						<a href="{{ website_url }}">{{ website_url }}</a>
					</p>
					<p>
						<a href="{{ facebook_url }}">{{ facebook_url }}</a>
					</p>
				</div>

				<div class="social-links">
					<a href="{{ website_url }}" target="_blank">
						<img src="cid:facebook-icon" alt="Facebook" class="social-icon">
					</a>
					<a href="{{ instagram_url }}" target="_blank">
						<img src="cid:instagram-icon" alt="Instagram" class="social-icon">
					</a>
					<a href="{{ youtube_url }}" target="_blank">
						<img src="cid:youtube-icon" alt="YouTube" class="social-icon">
					</a>
				</div>
			</div>
		</div>
	</body>
</html>
