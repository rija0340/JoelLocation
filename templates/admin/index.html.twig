										<i class="fa fa-star"></i>
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<div class="row">
									<div class="col-auto">
										<p>Service:
										</p>
									</div>
									<div class="col-auto">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>

										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>

										<i class="fa fa-star"></i>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">
							<i class="fa fa-close"></i>
							Fermer</button>
					</div>
				</div>
			</div>
		</div>{# fin modal #}</div>
{% endblock %}
