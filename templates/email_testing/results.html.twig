{% extends 'base.html.twig' %}

{% block title %}Email Testing Results{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Email Testing Results</h1>
    
    <div class="mb-3">
        <a href="{{ path('email_testing_index') }}" class="btn btn-primary">Back to Testing Interface</a>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Test Results</h5>
                </div>
                <div class="card-body">
                    {% for result in results %}
                        <div class="alert alert-{{ result.status == 'success' ? 'success' : 'danger' }} mb-3">
                            <h6>{{ result.type }}</h6>
                            <p>{{ result.message }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="card-header">
            <h5>Summary</h5>
        </div>
        <div class="card-body">
            {% set successCount = 0 %}
            {% set errorCount = 0 %}
            
            {% for result in results %}
                {% if result.status == 'success' %}
                    {% set successCount = successCount + 1 %}
                {% else %}
                    {% set errorCount = errorCount + 1 %}
                {% endif %}
            {% endfor %}
            
            <p>Total emails tested: {{ results|length }}</p>
            <p>Successful: {{ successCount }}</p>
            <p>Failed: {{ errorCount }}</p>
            
            {% if errorCount > 0 %}
                <div class="alert alert-warning">
                    <strong>Warning!</strong> Some emails failed to send. Check the error messages above for details.
                </div>
            {% else %}
                <div class="alert alert-success">
                    <strong>Success!</strong> All emails were sent successfully.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}