{% extends 'baseClient2.html.twig' %}

{% block title %}Signature du Contrat #{{ contract.id }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-2">
                <div class="card-header bg-primary text-white text-center py-3" style="background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);">
                    <h3 class="mb-0 fw-bold">
                        <i class="fa fa-file-contract me-2"></i>Signature du Contrat
                    </h3>
                </div>

                <div class="card-body p-4">
                    {# Alertes #}
                    {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa fa-exclamation-triangle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fa fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endfor %}

                    {# Informations Réservation #}
                    <div class="row mb-4 g-3">
                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-light">
                                <h6 class="text-primary mb-2">
                                    <i class="fa fa-info-circle me-1"></i>Référence
                                </h6>
                                <p class="mb-0">{{ contract.reservation.reference }}</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="border rounded p-3 bg-light">
                                <h6 class="text-primary mb-2">
                                    <i class="fa fa-car me-1"></i>Véhicule
                                </h6>
                                <p class="mb-0">{{ contract.reservation.vehicule.immatriculation }}</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    {# Contenu du Contrat #}
                    <div class="contract-content bg-light border rounded p-3 mb-4"
                        style="max-height: 300px; overflow-y: auto; font-family: 'Courier New', Courier, monospace;">
                        <h6 class="text-primary mb-2">
                            <i class="fa fa-file-alt me-1"></i>Contenu du Contrat
                        </h6>
                        <pre class="mb-0" style="white-space: pre-wrap; font-size: 0.9rem; line-height: 1.4;">{{ contract.contractContent }}</pre>
                    </div>

                    {# Zone de Signature #}
                    {% if not contract.isSignedByClient %}
                    <div class="signature-section">
                        <div class="text-center mb-3">
                            <h5 class="text-primary mb-2">
                                <i class="fa fa-pen-alt me-2"></i>Votre Signature
                            </h5>
                            <p class="text-muted mb-3" style="font-size: 0.9rem;">
                                Veuillez signer dans le cadre ci-dessous en utilisant votre souris ou votre doigt (sur écran tactile).
                            </p>
                        </div>

                        <form method="post" action="{{ path('contract_sign_client_process', {id: contract.id}) }}">
                            <div class="d-flex justify-content-center mb-3">
                                {% include 'contract/_signature_pad.html.twig' %}
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary py-2 rounded-2 fw-bold">
                                    <i class="fa fa-file-signature me-2"></i>Signer le Contrat
                                </button>

                                <a href="{{ path('client_reservation_show', {'id': contract.reservation.id}) }}"
                                   class="btn btn-outline-secondary py-2 rounded-2">
                                    <i class="fa fa-arrow-left me-2"></i>Retour à la réservation
                                </a>
                            </div>
                        </form>
                    </div>
                    {% else %}
                    <div class="alert alert-success text-center py-4 rounded-2">
                        <div class="d-flex flex-column align-items-center">
                            <i class="fa fa-check-circle text-success" style="font-size: 2.5rem;"></i>
                            <h5 class="mt-2 mb-2 fw-bold">Contrat Signé avec Succès !</h5>
                            <p class="mb-0" style="font-size: 0.9rem;">
                                Vous avez signé ce contrat le
                                <strong>{{ contract.signatures|filter(s => s.signatureType == 'client')|first.signedAt|date('d/m/Y à H:i') }}</strong>.
                            </p>

                            <div class="mt-3 d-flex gap-2 flex-wrap justify-content-center">
                                <a href="{{ path('client_reservation_show', {'id': contract.reservation.id}) }}"
                                   class="btn btn-primary btn-sm me-1">
                                    <i class="fa fa-arrow-left me-1"></i>Retour
                                </a>
                                <a href="{{ path('contract_download_client', {'id': contract.id}) }}"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-download me-1"></i>Télécharger
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}