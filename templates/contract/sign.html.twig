{% extends 'base.html.twig' %}

{% block title %}Sign Contract{% endblock %}

{% block body %}
    <div class="container">
        <h1>Sign Contract</h1>
        
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Contract Details</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Reservation:</strong> {{ reservation.reference }}</p>
                        <p><strong>Client:</strong> {{ reservation.client.email }}</p>
                        <p><strong>Vehicle:</strong> {{ reservation.vehicule.immatriculation }}</p>
                        <p><strong>Period:</strong> {{ reservation.dateDebut|date('Y-m-d H:i') }} to {{ reservation.dateFin|date('Y-m-d H:i') }}</p>
                        <p><strong>Total Price:</strong> {{ reservation.prix }} â‚¬</p>
                    </div>
                </div>
                
                <div class="card mt-4">
                    <div class="card-header">
                        <h3>Contract Content</h3>
                    </div>
                    <div class="card-body">
                        <pre id="contract-content">{{ contract.contractContent }}</pre>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Sign Here</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="signature-pad" width="300" height="150" style="border: 1px solid #ccc;"></canvas>
                        <div class="mt-3">
                            <button id="clear-signature" class="btn btn-secondary">Clear</button>
                            <button id="sign-contract" class="btn btn-primary">Sign Contract</button>
                        </div>
                        
                        <form id="signature-form" method="post" action="{{ path('contract_sign', {'id': contract.id}) }}" class="mt-3" style="display: none;">
                            <input type="hidden" id="signature-data" name="signature_data" />
                            <input type="hidden" id="public-key" name="public_key" />
                            <button type="submit" id="submit-signature" class="btn btn-success">Confirm Signature</button>
                        </form>
                        
                        <div id="signature-status" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const canvas = document.getElementById('signature-pad');
            const signaturePad = new SignaturePad(canvas);
            const clearButton = document.getElementById('clear-signature');
            const signButton = document.getElementById('sign-contract');
            const signatureForm = document.getElementById('signature-form');
            const signatureDataInput = document.getElementById('signature-data');
            const publicKeyInput = document.getElementById('public-key');
            const signatureStatus = document.getElementById('signature-status');
            const submitButton = document.getElementById('submit-signature');

            clearButton.addEventListener('click', function() {
                signaturePad.clear();
            });

            signButton.addEventListener('click', async function() {
                if (signaturePad.isEmpty()) {
                    alert('Please provide a signature first.');
                    return;
                }

                // Show processing status
                signatureStatus.innerHTML = '<div class="alert alert-info">Processing signature...</div>';
                signButton.disabled = true;
                submitButton.disabled = true;

                try {
                    // Generate key pair
                    const keyResponse = await fetch('{{ path("api_generate_keys") }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    if (!keyResponse.ok) {
                        throw new Error('Failed to generate keys');
                    }

                    const keyData = await keyResponse.json();
                    
                    if (!keyData.success) {
                        throw new Error('Failed to generate keys: ' + (keyData.error || 'Unknown error'));
                    }

                    // Get the contract content to sign
                    const contractContent = document.getElementById('contract-content').textContent;
                    
                    // Calculate hash of contract content
                    const signResponse = await fetch('{{ path("api_sign_contract") }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            contract_id: {{ contract.id }},
                            content: contractContent
                        })
                    });

                    if (!signResponse.ok) {
                        throw new Error('Failed to prepare signing');
                    }

                    const signData = await signResponse.json();
                    
                    if (!signData.success) {
                        throw new Error('Failed to prepare signing: ' + (signData.error || 'Unknown error'));
                    }

                    // Create the signature
                    const signatureData = signaturePad.toDataURL(); // Base64 encoded image of signature
                    const contractHash = signData.hash;
                    
                    // In a real implementation, we would sign the hash with the private key
                    // For this demo, we'll just pass the signature image and public key
                    // The actual signing would happen on the client-side using Web Crypto API
                    // or in a more complex implementation with proper cryptographic functions
                    
                    // For now, we'll just store the signature image and key
                    signatureDataInput.value = signatureData;
                    publicKeyInput.value = keyData.public_key;
                    
                    // Show confirmation and enable submit
                    signatureStatus.innerHTML = `
                        <div class="alert alert-success">
                            <p><strong>Signature ready!</strong></p>
                            <p>Contract hash: ${contractHash.substring(0, 16)}...</p>
                        </div>
                    `;
                    
                    signatureForm.style.display = 'block';
                    
                    // Enable the submit button
                    submitButton.disabled = false;
                } catch (error) {
                    console.error('Error during signing:', error);
                    signatureStatus.innerHTML = `<div class="alert alert-danger">Error: ${error.message}</div>`;
                    signButton.disabled = false;
                }
            });

            // Prevent form submission until signature is ready
            document.getElementById('signature-form').addEventListener('submit', function(e) {
                if (!signatureDataInput.value || !publicKeyInput.value) {
                    e.preventDefault();
                    alert('Signature not ready yet.');
                }
            });
        });
    </script>
{% endblock %}