{% extends 'baseClient2.html.twig' %}

{% block title %}Mes Signatures d'État des Lieux{% endblock %}

{% block stylesheets %}
<style>
    .modern-card {
        background: #ffffff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
    }

    .step-card {
        transition: all 0.3s ease;
        border-radius: 1rem;
    }

    .step-card.completed {
        border-left: 5px solid #22c55e;
        background-color: #f0fdf4;
    }

    .step-card.pending {
        border-left: 5px solid #f59e0b;
        background-color: #fffbeb;
    }

    .step-card.locked {
        border-left: 5px solid #94a3b8;
        background-color: #f8fafc;
        opacity: 0.7;
    }

    .signature-display {
        background: white;
        padding: 1rem;
        border-radius: 0.75rem;
        border: 1px solid #e2e8f0;
        display: inline-block;
        margin-top: 1rem;
    }

    .signature-img {
        max-height: 80px;
    }

    .badge-status {
        font-size: 0.75rem;
        font-weight: 700;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        text-transform: uppercase;
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-screen py-8 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="modern-card rounded-2xl overflow-hidden mb-8">
            <!-- Header -->
            <div class="bg-black px-8 py-10 text-center">
                <h1 class="text-3xl font-bold mb-2 text-white uppercase tracking-wide flex items-center justify-center">
                    <i class="fa fa-clipboard-check mr-3 text-joel-red"></i>Suivi de mes Signatures
                </h1>
                <p class="text-gray-400 font-medium">Référence Réservation : {{ reservation.reference }}</p>
            </div>

            <div class="p-6 md:p-8">
                <div class="flex justify-between items-center mb-10">
                    <div>
                        <h2 class="text-xl font-bold text-gray-800">État des Lieux & Contrat</h2>
                        <p class="text-sm text-gray-500">Consultez l'historique des validations pour votre location.</p>
                    </div>
                    <a href="{{ path('client_reservation_show', {id: reservation.id}) }}"
                        class="text-joel-red font-bold flex items-center hover:underline">
                        <i class="fa fa-arrow-left mr-2"></i> Retour
                    </a>
                </div>

                {# Step 1: Departure #}
                <div
                    class="step-card {{ checkin_status == 'fully_signed' ? 'completed' : 'pending' }} p-6 mb-8 border border-gray-100">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <div class="flex items-center">
                            <div
                                class="w-12 h-12 rounded-full {{ checkin_status == 'fully_signed' ? 'bg-green-100 text-green-600' : 'bg-amber-100 text-amber-600' }} flex items-center justify-center mr-4 shadow-sm">
                                <i
                                    class="fa {{ checkin_status == 'fully_signed' ? 'fa-check' : 'fa-car' }} text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">Étape 1 : État des Lieux Départ</h3>
                                <p class="text-sm text-gray-600">Requis pour la prise en charge du véhicule</p>
                            </div>
                        </div>
                        <span
                            class="badge-status {{ checkin_status == 'fully_signed' ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700' }}">
                            {{ checkin_status == 'fully_signed' ? 'Finalisé' : 'En attente' }}
                        </span>
                    </div>

                    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-gray-200/50">
                        <div>
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Ma Signature</span>
                            {% if contract.isSignedByClient('contract') %}
                            {% set sig = checkin_signatures|filter(s => s.signatureType == 'client')|first %}
                            <div class="signature-display">
                                <img src="{{ sig.signatureImage }}" class="signature-img" alt="Ma Signature">
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Le {{ sig.signedAt|date('d/m/Y à H:i') }}</p>
                            {% else %}
                            <div class="mt-2">
                                <a href="{{ path('contract_sign_client_hash', {id: contract.id, hash: hashedId}) }}"
                                    class="inline-block px-4 py-2 bg-joel-red text-white text-sm font-bold rounded-lg hover:bg-opacity-90 transition-all">
                                    <i class="fa fa-pen mr-2"></i> Signer maintenant
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        <div>
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Validation
                                Agence</span>
                            <div class="mt-4">
                                {% if contract.isSignedByAdmin('contract') %}
                                <div class="flex items-center text-green-600 font-bold">
                                    <i class="fa fa-check-circle mr-2"></i> Validé par Joel Location
                                </div>
                                {% else %}
                                <div class="flex items-center text-gray-400 italic">
                                    <i class="fa fa-clock mr-2"></i> En attente de validation agence
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                {# Step 2: Return #}
                <div
                    class="step-card {{ checkout_status == 'fully_signed' ? 'completed' : (can_sign_checkout ? 'pending' : 'locked') }} p-6 border border-gray-100">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                        <div class="flex items-center">
                            <div
                                class="w-12 h-12 rounded-full {{ checkout_status == 'fully_signed' ? 'bg-green-100 text-green-600' : (can_sign_checkout ? 'bg-amber-100 text-amber-600' : 'bg-gray-100 text-gray-400') }} flex items-center justify-center mr-4 shadow-sm">
                                <i
                                    class="fa {{ checkout_status == 'fully_signed' ? 'fa-check' : 'fa-undo' }} text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 text-lg">Étape 2 : État des Lieux Retour</h3>
                                <p class="text-sm text-gray-600">Requis lors de la restitution du véhicule</p>
                            </div>
                        </div>
                        <span
                            class="badge-status {{ checkout_status == 'fully_signed' ? 'bg-green-100 text-green-700' : (can_sign_checkout ? 'bg-amber-100 text-amber-700' : 'bg-gray-100 text-gray-500') }}">
                            {% if checkout_status == 'fully_signed' %}Finalisé{% elseif can_sign_checkout %}À
                            effectuer{% else %}Bloqué{% endif %}
                        </span>
                    </div>

                    {% if not can_sign_checkout %}
                    <div class="mt-4 p-4 bg-gray-50 rounded-xl flex items-center text-gray-500 text-sm">
                        <i class="fa fa-lock mr-3"></i> Cette étape sera débloquée après la finalisation du départ.
                    </div>
                    {% else %}
                    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-gray-200/50">
                        <div>
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Ma Signature</span>
                            {% if contract.isSignedByClient('checkout') %}
                            {% set sig = checkout_signatures|filter(s => s.signatureType == 'client')|first %}
                            <div class="signature-display">
                                <img src="{{ sig.signatureImage }}" class="signature-img" alt="Ma Signature">
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Le {{ sig.signedAt|date('d/m/Y à H:i') }}</p>
                            {% else %}
                            <div class="mt-2">
                                <a href="{{ path('client_checkout_sign_hash', {hashedId: hashedId}) }}"
                                    class="inline-block px-4 py-2 bg-joel-red text-white text-sm font-bold rounded-lg hover:bg-opacity-90 transition-all">
                                    <i class="fa fa-pen mr-2"></i> Signer le retour
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        <div>
                            <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Validation
                                Agence</span>
                            <div class="mt-4">
                                {% if contract.isSignedByAdmin('checkout') %}
                                <div class="flex items-center text-green-600 font-bold">
                                    <i class="fa fa-check-circle mr-2"></i> Validé par l'Agence
                                </div>
                                {% else %}
                                <div class="flex items-center text-gray-400 italic">
                                    <i class="fa fa-clock mr-2"></i> En attente de validation agence
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Download Section -->
        {% if checkin_status == 'fully_signed' %}
        <div
            class="bg-joel-dark text-white rounded-2xl p-8 flex flex-col md:flex-row items-center justify-between gap-6">
            <div class="flex items-center">
                <div class="w-16 h-16 bg-white/10 rounded-2xl flex items-center justify-center mr-6">
                    <i class="fa fa-file-pdf text-3xl text-joel-red"></i>
                </div>
                <div>
                    <h4 class="text-xl font-bold">Télécharger mon Contrat</h4>
                    <p class="text-gray-400 text-sm">Document complet avec les états des lieux certifiés.</p>
                </div>
            </div>
            <a href="{{ path('contrat_pdf', {'hashedId': hashedId|default(contract.reservation.id|sha1)}) }}"
                target="_blank"
                class="px-8 py-4 bg-joel-red text-white rounded-xl font-bold hover:bg-opacity-90 transition-all shadow-lg flex items-center">
                <i class="fa fa-download mr-3"></i> TÉLÉCHARGER LE PDF
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}