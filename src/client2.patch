+{% extends 'baseClient2.html.twig' %}
+
+{% block title %}Détails de la réservation {{ reservation.codeReservation }}{% endblock %}
+
+{% block stylesheets %}
+    {# <link href="https://cdn.jsdelivr.net/npm/daisyui@5.0.0/dist/full.min.css" rel="stylesheet" type="text/css" />
