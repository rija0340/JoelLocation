+                <div>
+                    <p><strong>Agence de départ:</strong> {{ reservation.agenceDepart|default('N/A') }}</p>
+                    <p><strong>Agence de retour:</strong> {{ reservation.agenceRetour|default('N/A') }}</p>
+                    <p><strong>Lieu:</strong> {{ reservation.lieu|default('N/A') }}</p>
+                    <p><strong>État:</strong> {{ reservation.etatReservation|default('N/A') }}</p>
+                    <p><strong>Mode:</strong> {{ reservation.modeReservation|default('N/A') }}</p>
